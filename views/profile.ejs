<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

<main>
    <div class="container">
        <div class="user_container">
          <div class="user_left_nav">
            <h2 >My account</h2>
            <div class="links">
                <a href="/profile">My Account</a>
                <a href="/">Show Users</a>
                <a href="/updateProfile">Edit profile</a>
                <form action="/logout" method="POST">

                    <button type="submit">Logout</button>

                </form>
            </div>
            
          </div>
          <div class="user_right">

            <div>
                <div class="user_nfo_panel">
                  <h1>User information</h1>
                  <div>
                    <span>First Name : <span style="font-weight: bold;display:inline-block"><%= user.firstName %></span> </span>
                    <span>Last Name : <span style="font-weight: bold;display:inline-block"><%= user.lastName %></span> </span>
                    <span>Email : <span style="font-weight: bold;display:inline-block"><%= user.email %></span></span>                   
                  </div>
                  <MyButton
                    type="default"
                    title="Edit account info"
                    linkTo="/user/user_profile"
                  />
                  <button class="btn-default">
                      <a href="/updateProfile">

                          Edit account info
                      </a>
                  </button>
        
                </div>

          </div>
        </div>
      </div>


   

</main>


<%- include('includes/end.ejs') %>