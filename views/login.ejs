<body>
   <%- include('includes/navigation.ejs') %>

    <main>
            <div class="page_wrapper">
                <div class="container">
                  <div class="register_login_container">
                    <div class="left">
                      <h1>New Customers</h1>
                      <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
